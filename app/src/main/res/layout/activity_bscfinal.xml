<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BSCPackage.BSCFinalActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/final_year"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#3BC9DB"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="50dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/bsc_all_year_image"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:background="@drawable/bsc_all_year_layout_style"
        android:orientation="vertical"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="40sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="@string/math"
            android:textColor="#E74C3C"
            android:textSize="25sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/bscMathFinalYearClick"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            android:text="@string/mathematics"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:backgroundTint="#E74C3C"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <Button
            android:id="@+id/bscChemFinalYearClick"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            android:text="@string/chemistry"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:backgroundTint="#E74C3C"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <Button
            android:id="@+id/bscPhysFinalYearClick"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            android:text="@string/physics"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:backgroundTint="#E74C3C"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bio"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#E74C3C"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="25sp"
            />
        <Button
            android:id="@+id/bscBotFinalYearClick"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            android:text="@string/botany"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:backgroundTint="#E74C3C"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <Button
            android:id="@+id/bscChem2FinalYearClick"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            android:text="@string/chemistry"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:backgroundTint="#E74C3C"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <Button
            android:id="@+id/bscZooFinalYearClick"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            android:text="@string/zoology"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:backgroundTint="#E74C3C"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>
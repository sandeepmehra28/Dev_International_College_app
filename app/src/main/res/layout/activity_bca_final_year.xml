<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BCACourse.bcaFinalYearActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/final_yearbca"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#7874ff"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:layout_marginRight="30sp"
    android:layout_marginLeft="30sp"
    android:layout_gravity="center"
    android:backgroundTint="#fbe1ae"
    android:layout_marginBottom="10sp"
    android:background="@drawable/bca_all_year_layout_style">
    <Button
        android:id="@+id/BCAfinalYearClick"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/open_syllabus"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:textColor="#ffff"
        android:backgroundTint="#7874ff "
        />
    <Button
        android:id="@+id/BCAfinalYearPracticalClick"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/practical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#ffff"
        android:backgroundTint="#7874ff "/>
    <Button
        android:id="@+id/BCAStudentsData"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/students_list"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#ffff"
        android:backgroundTint="#7874ff"/>

    <Button
        android:id="@+id/FinalYearBackBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="20sp"
        android:backgroundTint="#7874ff "
        android:gravity="center"
        android:text="@string/back"
        android:textColor="#F4F3F3" />
</LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:contentDescription="@string/cvb"
        android:src="@drawable/bca_all_year_background_im"
        />
</LinearLayout>
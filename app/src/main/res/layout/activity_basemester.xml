<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ba_semester_background_image"
    tools:context=".BAPackage.BASemesterActivity">
    <TextView
        android:id="@+id/nt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/semesters"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/ba_layout_style"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40sp"
        android:layout_marginLeft="40sp"
        android:layout_gravity="center"
        android:layout_marginBottom="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/semfirst"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ba_layout_style"
            android:text="@string/semester_first"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            />
        <TextView
            android:id="@+id/semSecond"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ba_layout_style"
            android:text="@string/semester_second"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            />
        <TextView
            android:id="@+id/semThird"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ba_layout_style"
            android:text="@string/semester_third"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            />
        <TextView
            android:id="@+id/semfourth"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ba_layout_style"
            android:text="@string/semester_fourth"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            />
        <TextView
            android:id="@+id/semfifth"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ba_layout_style"
            android:text="@string/semester_fifth"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            />
        <TextView
            android:id="@+id/semSixth"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ba_layout_style"
            android:text="@string/semester_sixth_g"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20sp"
            android:text="@string/note_semester_fifth_and_sixth_not_available"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>

    <Button
        android:id="@+id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="80dp"
        android:backgroundTint="#920333"
        android:gravity="center"
        android:text="@string/back" />
</LinearLayout>
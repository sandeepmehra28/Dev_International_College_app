<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BSCPackage.BSCFirstActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/first_year"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#3BC9DB"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="50dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/bsc_all_year_image"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:background="@drawable/bsc_all_year_layout_style"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="450dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="@string/math"
            android:textColor="#E74C3C"
            android:textSize="25sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/bscMathFirstYearClick"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:text="@string/mathematics"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:backgroundTint="#E74C3C"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <Button
            android:id="@+id/bscChemFirstYearClick"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:text="@string/chemistry"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:backgroundTint="#E74C3C"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <Button
            android:id="@+id/bscPhysFirstYearClick"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:text="@string/physics"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:backgroundTint="#E74C3C"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bio"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#E74C3C"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="25sp"
            />
        <Button
            android:id="@+id/bscBotFirstYearClick"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:text="@string/botany"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:backgroundTint="#E74C3C"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <Button
            android:id="@+id/bscChem2FirstYearClick"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:text="@string/chemistry"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:backgroundTint="#E74C3C"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <Button
            android:id="@+id/bscZooFirstYearClick"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:text="@string/zoology"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:backgroundTint="#E74C3C"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
    <Button
        android:id="@+id/backBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/back"
        android:textSize="20sp"
        android:layout_marginTop="120dp"
        android:backgroundTint="#3BC9DB"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#58FFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BCACourse.StudentsDataActivity">

    <ImageView
        android:layout_marginTop="40sp"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/student_data_backgroundimage" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="380dp"
        android:layout_height="520dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/TextViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:padding="16dp"
            android:text="@string/loading"
            android:textColor="#000000"
            android:textSize="18sp" />
    </ScrollView>
   <RelativeLayout
       android:orientation="horizontal"
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_gravity="center"
       android:layout_height="65dp">
       <Button
           android:id="@+id/InsertDataBtn"
           android:layout_width="200dp"
           android:layout_height="50sp"
           android:gravity="center"
           android:paddingBottom="10sp"
           android:text="@string/insert_data"
           android:textSize="15sp"
           android:layout_marginTop="0.5dp"
           android:backgroundTint="#0B9090"
           android:layout_marginStart="30sp"
           android:layout_marginEnd="220sp"
           />
       <Button
           android:id="@+id/DeleteDataBtn"
           android:layout_width="200dp"
           android:layout_height="50dp"
           android:text="@string/delete_datas"
           android:gravity="center"
           android:textSize="15sp"
           android:layout_marginTop="0.5dp"
           android:backgroundTint="#0B9090"
           android:layout_marginStart="220sp"
           android:layout_marginEnd="30sp"/>
   </RelativeLayout>
    <Button
        android:id="@+id/backToBCAActivity"
        android:layout_width="200dp"
        android:layout_marginTop="10sp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/back"
        android:backgroundTint="@color/black"
        />
</LinearLayout>
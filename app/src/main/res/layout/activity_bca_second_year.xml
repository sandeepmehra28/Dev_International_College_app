<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/bca_background_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BCACourse.bcaSecondYearActivity">
    <TextView
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:text="@string/second_yearbca"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:backgroundTint="#BAC2ED"
        android:background="@drawable/bca_all_year_layout_style">
        <Button
            android:id="@+id/BCAsecondYearClick"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="@string/open_syllabus"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="#ffff"
            android:backgroundTint="#051679"
            />
        <Button
            android:id="@+id/BCAsecondYearPracticalClick"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="@string/practical"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="#ffff"
            android:backgroundTint="#051679"
            />
        <Button
            android:id="@+id/SecondYearBackBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/back"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:backgroundTint="#051679"
            android:textColor="#F4F3F3"
            />
    </LinearLayout>
</LinearLayout>
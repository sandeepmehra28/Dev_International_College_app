<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BCACourse.bcaFirstYearActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/first_yearbca"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#7874ff"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/bca_all_year_layout_style"
        android:backgroundTint="#fbe1ae"
        android:orientation="vertical">

        <Button
            android:id="@+id/BCAfirstYearClick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="30sp"
            android:backgroundTint="#7874ff"
            android:text="@string/open_syllabus"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/BCAfirstYearPracticalClick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30sp"
            android:backgroundTint="#7874ff"
            android:gravity="center"
            android:text="@string/practical"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/FirstYearBackBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="20sp"
            android:backgroundTint="#7874ff"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="#F4F3F3" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:contentDescription="@string/cvb"
        android:src="@drawable/bca_all_year_background_im"
        />
</LinearLayout>
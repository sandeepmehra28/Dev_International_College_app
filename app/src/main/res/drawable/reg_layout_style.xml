<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom layer: Colored gradient (top, middle, bottom) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#FF6F61"
                android:centerColor="#F8958B"
                android:endColor="#FFC8C3"
                android:centerY="0.5" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Top layer: White inset background -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <!--            <solid android:color="@android:color/white" />-->
            <corners android:radius="28dp" />
        </shape>
    </item>

</layer-list>
